    /* Animations */
    @keyframes flicker {
      0% { opacity: 1; }
      50% { opacity: 0.8; text-shadow: 0 0 10px #0f0; }
      100% { opacity: 1; text-shadow: 0 0 20px #0f0; }
    }

    @keyframes glow {
      from { box-shadow: 0 0 5px #0f0; }
      to { box-shadow: 0 0 20px #0f0; }
    }

    @keyframes fadeIn {
      from { opacity: 0; transform: translateY(-20px); }
      to { opacity: 1; transform: translateY(0); }
    }

    @keyframes typing {
      from { width: 0; }
      to { width: 100%; }
    }

    /* Matrix rain effect */
    canvas {
      position: fixed;
      top: 0;
      left: 0;
      z-index: -1;
      width: 100%;
      height: 100%;
      background: #000;
    }
  </style>
